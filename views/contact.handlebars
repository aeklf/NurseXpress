<navbar class="navbar">
    <div class="logo">
        <h1>NurseXpress</h1>
    </div>

    <div class="navlinks">
        <a href="/" class="navLink">Home</a>
        <a class="navLink" id="popup-login">Log In/Register</a>
        <div class="log-container popup-form" id="popup-form">
            <div class="titles">
                <div class="title login">Login</div>
            </div>
            <div class="container-forms">
                <div class="inner-form">
                    <form action="/api/users/login" class="login" id="login" method="POST" autocomplete="on">
                        <input type="text" class="field" name="email" placeholder="Email" required>
                        <input type="password" class="field" name="password" placeholder="Password" required>
                        <div class="forgot-pwd"><a href="#">Forgot password?</a></div>
                        <input type="submit" class="field" value="Login">
                        <div class="register-link">Not a member? <a href="/api/users/register"> Register now</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <a href="/about" class="navLink">About</a>
        <a href="/contact" class="navLink">Contact</a>
    </div>
</navbar>

<div id="contact" class="section">
    <div class="container">
        <div class="formContainer" id="contactForm">
            <div class="rightContainer">
                <div class="rightInnerContainer">
                    <form action="#">
                        <input type="text" placeholder="Name *" id="firstName" />
                        <input type="email" placeholder="Email *" id="userEmail" />
                        <input type="phone" placeholder="Phone" id="phoneNumber" />
                        <textarea rows="4" placeholder="Message * " id="userMessage"></textarea>
                        <button type="submit" id="sendContact" onClick="sendContact()">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/index.js"></script>